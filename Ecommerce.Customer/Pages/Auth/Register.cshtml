@page
@model Ecommerce.Customer.Pages.Auth.RegisterModel
@{
}

<main class="main-content">
            
            <div class="login-register-area section-space-y-axis-100">
                <div class="container">
                    <div class="row" style="justify-content: center">
                        <div class="col-lg-6 pt-10 pt-lg-0">
                            <form action="#">
                                <div class="login-form">
                                    <h4 class="login-title">Register</h4>
                                    <div class="row">
                                        <div class="col-md-6 col-12">
                                            <label>Họ*</label>
                                            <input type="text" placeholder="Nhập Họ">
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <label>Tên*</label>
                                            <input type="text" placeholder="Nhập Tên">
                                        </div>
                                        <div class="col-md-12">
                                            <label>Email*</label>
                                            <input type="email" placeholder="Nhập địa chỉ email">
                                        </div>
                                        <div class="col-md-12">
                                            <label>Số điện thoại*</label>
                                            <input type="number" placeholder="Nhập số điện thoại">
                                        </div>
                                        <div class="col-md-6">
                                            <label>Mật khẩu*</label>
                                            <input type="password" placeholder="Nhập mật khẩu">
                                        </div>
                                        <div class="col-md-6">
                                            <label>Xác nhận mật khẩu*</label>
                                            <input type="password" placeholder="Xác nhận mật khẩu">
                                        </div>
                                        <div class="col-12">
                                            <button class="btn btn-custom-size lg-size btn-secondary btn-primary-hover rounded-0">Đăng ký</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
</main>
