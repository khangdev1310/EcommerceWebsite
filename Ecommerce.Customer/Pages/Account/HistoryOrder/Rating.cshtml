@page "{id}"
@model Ecommerce.Customer.Pages.Account.HistoryOrder.DetailModel
@{
    
}

<div class="container-fluid my-5 d-flex justify-content-center " style="gap: 10%">


     <div class="feedback-area pt-5 text-center" style="width: 30%">
             <div class="rating-box justify-content-center align-items-center">
             <img class="img-fluid my-auto"
             style="width: 50%"
             src="@Model.Rating.Product.ProductImages.ElementAt(0).ImageUrl" 
             />
             
             </div>
             <div>
                 <strong>@Model.Rating.Product.Name</strong>
             </div>
             <div>@Model.Rating.Product.Desc</div>
             <form class="feedback-form pt-8" method="post" asp-route-id="@Model.idRoute">
             <input type="range" value="5" step="0.5" id="backing5" name="Rating">
             <div class="rateit" data-rateit-backingfld="#backing5" data-rateit-resetable="false" data-rateit-ispreset="true"
                     data-rateit-min="0" data-rateit-max="5">
             </div>
             <div class="form-field mt-6">
               <textarea name="Comment" placeholder="Message" class="textarea-field"></textarea>
             </div>
             
             <div class="button-wrap mt-8">
              <button type="submit" value="submit" class="btn btn-custom-size lg-size btn-secondary btn-primary-hover btn-lg rounded-0" name="submit">Send rating</button>
              </div>
              </form>
              </div>
</div>

